@model Aplicação.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Perfil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        #petgramlogo {
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <div class='nav-brand' id='petgramlogo'>
        <a href='/Home'>
            <img src='https://github.com/PI-InfoWeb-CNAT/petgram/blob/main/images/logo.jpeg?raw=true' alt='Logo PetGram' width="100px">
        </a>
    </div>
    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.User)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Data_Nascimento)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Data_Nascimento)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Senha)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Senha)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ConfirmaSenha)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ConfirmaSenha)
            </dd>

        </dl>
    </div>
    <h4>Pets:</h4>
    @foreach (var item in Model.Pets)
    {
        @Html.DisplayFor(modelItem => item.Name) <br />
        @Html.DisplayFor(modelItem => item.Description) <br />
        @Html.DisplayFor(modelItem => item.Category) <br />

    }
    <br /><br />

    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |

    <br /><br /><br /><br />

    @foreach (var item in Model.Postagens)
    {
        <div class="card col align-items-center" style="margin: 10px 20px 10px 20px;">
            <img class="img-thumbnail img-responsive" style="height: 300px" src="@Url.Action("GetImagem", "Home", new { id = item.ID })" />
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.UserID)</h4>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
            </div>
        </div>

        <div class="">
            <p>
                Faça um comentário sobre a postagem:
            </p>

            @using (Html.BeginForm("Comentar", "Home", FormMethod.Post, new { UserID = ViewBag.UserID, PostID = item.ID, Descricao = "teste", Data = DateTime.Now.ToString() }))
            {
                <input type="submit" value="Enviar" />
            }
        </div>

    }

    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
