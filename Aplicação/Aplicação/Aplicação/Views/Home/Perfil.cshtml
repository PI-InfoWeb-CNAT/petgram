@model Aplicação.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Perfil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        #petgramlogo {
            margin-left: 15px;
        }

        body {
            margin-top: 20px;
            background: #eee;
        }

        .social-avatar {
            padding: 15px 15px 0 15px;
        }

        .social-avatar img {
            height: 40px;
            width: 40px;
            margin-right: 10px;
        }

    </style>
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <div class='nav-brand' id='petgramlogo'>
        <a href='/Home'>
            <img src='https://github.com/PI-InfoWeb-CNAT/petgram/blob/main/images/logo.jpeg?raw=true' alt='Logo PetGram' width="100px">
        </a>
    </div>
    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.User)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Data_Nascimento)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Data_Nascimento)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Senha)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Senha)
            </dd>


        </dl>
    </div>
    <h4>Pets:</h4>
    @foreach (var item in Model.Pets)
    {
        @Html.DisplayFor(modelItem => item.Name) <br />
        @Html.DisplayFor(modelItem => item.Description) <br />
        @Html.DisplayFor(modelItem => item.Category) <br />

    }
    <br /><br />

    @Html.ActionLink("Editar perfil", "EditarPerfil", new { userID = ViewBag.UserID })

    <br /><br /><br /><br />

    @foreach (var item in Model.Postagens)
    {
        <div class="card col align-items-center" style="margin: 10px 20px 10px 20px;">

            <!-- Foto do avatar e nome da pessoa -->
            <div>
                <a href="#PERFILDOUSUARIO">
                    <div class="social-avatar">
                        <img alt="image" src="https://bootdey.com/img/Content/avatar/avatar1.png">
                        nome do usuario
                        <!-- Nome do usuário da pessoa que postou ao lado da imagem -->
                    </div>
                </a>
                <div class="btn-group">
                    <!-- engrenagem para deletar postagem -->
                    <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear" viewBox="0 0 16 16">
                            <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492zM5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0z" />
                            <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52l-.094-.319zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115l.094-.319z" />
                        </svg>
                    </button>
                    <div class="dropdown-menu">
                        @using (Html.BeginForm("DeletarPostagem", "Postagem", new { postID = item.ID, userID = item.UserID }, FormMethod.Post, new { @id = "delete-form", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="dropdown-item bg-danger">
                                <input type="submit" value="Excluir postagem" />
                            </div>
                        }

                    </div>
                </div>
            </div>

            <img class="img-thumbnail img-responsive" style="height: 300px" src="@Url.Action("GetImagem", "Postagem", new { id = item.ID })" />

            <div>
                <div class="like_and_comment">
                    <a href="@Url.Action("Like", "Postagem", new { postID = item.ID, userID = ViewBag.UserID })"><i class="fa fa-paw gostou" style="font-size:24px; color:red"></i></a>
                    <a href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="black" class="bi bi-chat" viewBox="0 0 16 16">
                            <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <div class="card-body">
                <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
            </div>
        </div>

        <div class="">
            <p>
                Faça um comentário sobre a postagem:
            </p>

            @using (Html.BeginForm("Comentar", "Mensagem", new { UserID = ViewBag.UserID, PostID = item.ID, Descricao = "teste", Data = DateTime.Now.ToString() }, FormMethod.Post, new { @id = "comment-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Enviar" />
            }
        </div>

    }

    <p>
        @Html.ActionLink("Ir para o feed", "Feed", new { UserID = Model.ID })
    </p>

    <p>
        @using (Html.BeginForm("DeletarUsuario", "Home", new { id = ViewBag.UserID }, FormMethod.Post, new { @id = "delete-user-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Excluir conta" />
        }
    </p>
</body>
</html>
