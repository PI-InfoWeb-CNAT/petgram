    @foreach (var item in Model)
    {
        <div class="card col align-items-left" style="margin: 10px 25% 10px 25%; background-color: #EB7E2F; border-color: #EB7E2F">
            <img class="img-thumbnail img-responsive" style="margin-left:5%; margin-right:5%" src="@Url.Action("GetImagem", "Postagem", new { id = item.ID })" />

            <div class="like_and_comment" style="margin-left:5%; margin-top:1%">
                <a href="@Url.Action("Like", "Postagem", new { postID = item.ID, userID = ViewBag.UserID })"><i class="fa fa-paw fa-lg" style="color:white"></i></a>
                <a href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="white" class="bi bi-chat" viewBox="0 0 16 16">
                        <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"></path>
                    </svg>
                </a>
            </div>

            <div class="card-body" style="background-color: #EB7E2F; margin-left: 5%; margin-right: 5%; margin-top: 1%">
                <h5 class="card-title" style="color: white; display: inline-block">@Html.DisplayFor(modelItem => item.UserID)</h5>
                <h6 class="card-text" style="color: white; display: inline-block">@Html.DisplayFor(modelItem => item.Descricao)</h6>
            </div>

            <div style="margin-left: 5%; margin-right: 5%; margin-top:1%">
                <h6 class="card-text" style="color:white">Faça um comentário sobre a postagem:</h6>
                <br />
                @using (Html.BeginForm("Comentar", "Mensagem", new { UserID = ViewBag.UserID, PostID = item.ID, Descricao = "teste", Data = DateTime.Now.ToString() }, FormMethod.Post, new { @id = "comment-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Enviar" style="background-color: #2A5594; color: white; border-color: #2A5594" />
                }
            </div>
        </div>

        @*<div class="" style="margin: 10px 20px 10px 20px;">
                <p>
                    Faça um comentário sobre a postagem:
                </p>

                @using (Html.BeginForm("Comentar", "Mensagem", new { UserID = ViewBag.UserID, PostID = item.ID, Descricao = "teste", Data = DateTime.Now.ToString() }, FormMethod.Post, new { @id = "comment-form", role = "form" }))
