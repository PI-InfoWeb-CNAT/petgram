            @Html.DisplayFor(modelItem => item.Filtro)

        }*@

    @Html.ActionLink("Publicar postagem", "Publicar", "Postagem", new { UserID = ViewBag.UserID }, null)

    @foreach (var item in Model)
    {
        <div class="card col align-items-left" style="margin: 10px 25% 10px 25%; background-color: #EB7E2F; border-color: #EB7E2F">
            <img class="img-thumbnail img-responsive" style="width: 90%; margin-left:5%; margin-right:5%" src="@Url.Action("GetImagem", "Postagem", new { id = item.ID })" />


            <div class="card-body" style="background-color: #EB7E2F; margin-left: 5%; margin-right: 5%; margin-top: 1%">
                <h5 class="card-title" style="color: white; display: inline-block">@Html.DisplayFor(modelItem => item.UserID)</h5>
                <h6 class="card-text" style="color: white; display: inline-block">@Html.DisplayFor(modelItem => item.Descricao)</h6>
            </div>

            <div style="margin-left: 5%; margin-right: 5%; margin-top:1%">
                <h6 class="card-text" style="color:white">Faça um comentário sobre a postagem:</h6>
                <br />
                @using (Html.BeginForm("Comentar", "Mensagem", new { UserID = ViewBag.UserID, PostID = item.ID, Descricao = "teste", Data = DateTime.Now.ToString() }, FormMethod.Post, new { @id = "comment-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Enviar" style="background-color: #2A5594; color: white; border-color: #2A5594"/>
                }
            </div>
        </div>

        @*<div class="" style="margin: 10px 20px 10px 20px;">
