@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Feed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            background-color: #EB7E2F;
        }
    </style>
</head>
<body>
    <div class='nav-brand'>
        <a href='/Home'>
            <img src='https://github.com/PI-InfoWeb-CNAT/petgram/blob/login_sem_identity/images/logo_branca_petgram.png?raw=true' alt='Logo PetGram' style="width:10%; height:8%; margin-left:45%; margin-right:45%">
        </a>
    </div>
    @*foreach (var item in Model)
        {

            @Html.DisplayFor(modelItem => item.UserID)

            @Html.DisplayFor(modelItem => item.Data)

            @Html.DisplayFor(modelItem => item.Descricao)

            @Html.DisplayFor(modelItem => item.Visibilidade)

            @Html.DisplayFor(modelItem => item.Filtro)

        }*@

    @Html.ActionLink("Publicar postagem", "Publicar", "Postagem", new { UserID = ViewBag.UserID }, null)

    @foreach (var item in Model)
    {
        <div class="card col align-items-left" style="margin: 10px 20px 10px 20px; background-color: #EB7E2F">
            <img class="img-thumbnail img-responsive" style="width: 50%; height: 4%; margin-left: 25%; margin-right: 25%;" src="@Url.Action("GetImagem", "Postagem", new { id = item.ID })" />


            <div class="card-body" style="margin: 10px 20px 10px 20px; background-color: #EB7E2F">
                <h4 class="card-title" style="color:white">@Html.DisplayFor(modelItem => item.UserID)</h4>
                <p class="card-text" style="color:white">@Html.DisplayFor(modelItem => item.Descricao)</p>**
            </div>
        </div>

        <div class="" style="margin: 10px 20px 10px 20px;">
            <p>
                Faça um comentário sobre a postagem:
            </p>

            @using (Html.BeginForm("Comentar", "Mensagem", new { UserID = ViewBag.UserID, PostID = item.ID, Descricao = "teste", Data = DateTime.Now.ToString() }, FormMethod.Post, new { @id = "comment-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Enviar" />
            }
        </div>
        <hr style="color:#FD9448">
    }

</body>
</html>
